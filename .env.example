# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///data/confai.db

# LLM API Keys
ANTHROPIC_API_KEY=your-claude-api-key
GEMINI_API_KEY=your-gemini-api-key
GROK_API_KEY=your-grok-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# LLM Selection (claude, gemini, grok, or perplexity)
LLM_PROVIDER=claude

# Embeddings Configuration
# Gemini API is used for document embeddings (text-embedding-004 model)
# Embeddings are stored in ChromaDB (local persistent storage in data/chromadb/)
# No additional configuration needed - uses GEMINI_API_KEY above

# Email Configuration (for PIN codes)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@confai.com

# Security
ADMIN_API_KEY=your-admin-api-key-for-transcript-updates
ADMIN_EMAIL=admin@yourcompany.com,admin2@yourcompany.com
RATE_LIMIT_PER_MINUTE=5

# Application Settings
MAX_USERS=150
VOTES_PER_USER=3
